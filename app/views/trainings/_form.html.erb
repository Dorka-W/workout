<%= form_with(model: training, local: true) do |form| %>
  <% if training.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(training.errors.count, "error") %> prohibited this training from being saved:</h2>

      <ul>
      <% training.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :cover %>
    <%= form.file_field :cover %>
  </div>

  <h3>Excercises</h3>

  <div id="training_lines">
    <%= form.fields_for :training_lines do |training_line| %>
    <%= render 'training_line_fields', f: training_line %>
    <% end %>
  </div>

  <div class="links">
    <%= link_to_add_association 'add line', form, :training_lines %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
